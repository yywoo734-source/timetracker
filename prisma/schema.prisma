generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  ADMIN
  SUPER_ADMIN
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        String         @id @db.Uuid
  email     String         @unique
  name      String?
  role      Role           @default(STUDENT)
  status    ApprovalStatus @default(PENDING)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  timeBlocks       TimeBlock[]
  dayRecords       DayRecord[]
  categoryOverrides CategoryOverride[]
  assignedStudents AdminAssignment[] @relation("AdminAssignedStudents")
  assignedAdmins   AdminAssignment[] @relation("StudentAssignedAdmins")
  approvalsGiven   AdminAssignment[] @relation("AdminApprovalsGiven")
}

model AdminAssignment {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  adminId      String   @db.Uuid
  studentId    String   @db.Uuid
  approvedById String?  @db.Uuid
  approvedAt   DateTime?
  createdAt    DateTime @default(now())

  admin    User @relation("AdminAssignedStudents", fields: [adminId], references: [id], onDelete: Cascade)
  student  User @relation("StudentAssignedAdmins", fields: [studentId], references: [id], onDelete: Cascade)
  approvedBy User? @relation("AdminApprovalsGiven", fields: [approvedById], references: [id], onDelete: SetNull)

  @@unique([adminId, studentId])
  @@index([studentId])
}

model TimeBlock {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId      String   @db.Uuid
  date        DateTime
  startMin    Int
  durationMin Int
  category    String?
  note        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

model DayRecord {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @db.Uuid
  day       DateTime
  blocks    Json
  notes     Json
  categories Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, day])
  @@index([userId, day])
}

model CategoryOverride {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  studentId  String   @db.Uuid
  categoryId String
  label      String
  color      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  student User @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, categoryId])
  @@index([studentId])
}
